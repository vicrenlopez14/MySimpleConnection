<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>My Simple Connection</Title>
    <Description>A simple class that establishes a connection with a MySqlConnection from simple parameters.</Description>
    <PackageProjectUrl>https://vicrenlopez.com</PackageProjectUrl>
    <PackageIcon>MySqlConnection.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>mysql;connection;connector;simpleconnector</PackageTags>
    <PackageReleaseNotes>First operative version.</PackageReleaseNotes>
    <NeutralLanguage>en</NeutralLanguage>
    <AnalysisLevel>none</AnalysisLevel>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MySql.Data" Version="8.0.29" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\MySqlConnection.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Assets\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
